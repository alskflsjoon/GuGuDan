<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estsoft.gugudan.GameActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맞춘개수: "
        android:id="@+id/textView_game_count"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은시간: "
        android:id="@+id/textView_game_timer"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView_game_remainTime"
        android:layout_toStartOf="@+id/textView_game_remainTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_game_remainTime"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView_game_correctCount"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView_game_count"
        android:layout_toRightOf="@+id/textView_game_count"
        android:layout_toEndOf="@+id/textView_game_count" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView_game_totalCount"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView_game_slash"
        android:layout_toRightOf="@+id/textView_game_slash"
        android:layout_toEndOf="@+id/textView_game_slash" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/textView_game_slash"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/textView_game_correctCount"
        android:layout_toRightOf="@+id/textView_game_correctCount"
        android:layout_toEndOf="@+id/textView_game_correctCount" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="22"
        android:id="@+id/button_game_ans2"
        android:layout_marginTop="112dp"
        android:layout_below="@+id/textView_game_totalCount"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="11"
        android:id="@+id/button_game_ans1"
        android:layout_alignTop="@+id/button_game_ans2"
        android:layout_toLeftOf="@+id/button_game_ans2"
        android:layout_toStartOf="@+id/button_game_ans2"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="33"
        android:id="@+id/button_game_ans3"
        android:layout_alignTop="@+id/button_game_ans2"
        android:layout_toRightOf="@+id/button_game_ans2"
        android:layout_toEndOf="@+id/button_game_ans2"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="55"
        android:id="@+id/button_game_ans5"
        android:layout_alignTop="@+id/button_game_ans2"
        android:layout_toLeftOf="@+id/button_game_ans3"
        android:layout_toStartOf="@+id/button_game_ans3"
        android:layout_marginTop="75dp"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="44"
        android:id="@+id/button_game_ans4"
        android:layout_alignTop="@+id/button_game_ans5"
        android:layout_alignLeft="@+id/button_game_ans1"
        android:layout_alignStart="@+id/button_game_ans1"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="66"
        android:id="@+id/button_game_ans6"
        android:layout_alignTop="@+id/button_game_ans5"
        android:layout_toRightOf="@+id/button_game_ans2"
        android:layout_toEndOf="@+id/button_game_ans2"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="88"
        android:id="@+id/button_game_ans8"
        android:layout_below="@+id/button_game_ans2"
        android:layout_alignLeft="@+id/button_game_ans5"
        android:layout_alignStart="@+id/button_game_ans5"
        android:layout_marginTop="70dp"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="77"
        android:id="@+id/button_game_ans7"
        android:layout_alignTop="@+id/button_game_ans8"
        android:layout_alignLeft="@+id/button_game_ans4"
        android:layout_alignStart="@+id/button_game_ans4"
        android:textSize="35dp"
        android:textColor="#000000" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="99"
        android:id="@+id/button_game_ans9"
        android:layout_alignTop="@+id/button_game_ans8"
        android:layout_toRightOf="@+id/button_game_ans5"
        android:layout_toEndOf="@+id/button_game_ans5"
        android:textSize="35dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:id="@+id/textView_game_multiply"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_above="@+id/button_game_ans5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/textView_game_ParamL"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView_game_multiply"
        android:layout_alignLeft="@+id/button_game_ans2"
        android:layout_alignStart="@+id/button_game_ans2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/textView_game_ParamR"
        android:textSize="40sp"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView_game_multiply"
        android:layout_alignRight="@+id/button_game_ans2"
        android:layout_alignEnd="@+id/button_game_ans2" />

</RelativeLayout>
