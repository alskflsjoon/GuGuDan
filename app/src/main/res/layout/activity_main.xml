<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estsoft.gugudan.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임시작"
        android:id="@+id/button_main_start"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기록"
        android:id="@+id/button_main_record"
        android:layout_below="@+id/button_main_start"
        android:layout_alignLeft="@+id/button_main_start"
        android:layout_alignStart="@+id/button_main_start" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도움말"
        android:id="@+id/button_main_help"
        android:layout_below="@+id/button_main_record"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="구구단 파이터"
        android:id="@+id/textView_title"
        android:layout_marginBottom="78dp"
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_above="@+id/button_main_start"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="~구구몬의 습격~"
        android:id="@+id/textView_subtitle"
        android:layout_alignTop="@+id/textView_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나가기"
        android:id="@+id/button_main_exit"
        android:layout_below="@+id/button_main_help"
        android:layout_alignLeft="@+id/button_main_help"
        android:layout_alignStart="@+id/button_main_help" />

</RelativeLayout>
