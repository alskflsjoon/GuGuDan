<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.estsoft.gugudan.ResultActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="맞춘개수"
        android:id="@+id/textView_result_txt1"
        android:layout_marginTop="94dp"
        android:textColor="#000000"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:id="@+id/textView_result_result"
        android:textSize="25dp"
        android:layout_below="@+id/textView_result_txt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다시 하시겠습니까?"
        android:id="@+id/textView_result_txt2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        android:textSize="20dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="네"
        android:id="@+id/button_result_yes"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/textView_result_txt2"
        android:layout_alignLeft="@+id/textView_result_txt2"
        android:layout_alignStart="@+id/textView_result_txt2" />

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="아니오"
        android:id="@+id/button_result_no"
        android:layout_alignTop="@+id/button_result_yes"
        android:layout_alignRight="@+id/textView_result_txt2"
        android:layout_alignEnd="@+id/textView_result_txt2" />
</RelativeLayout>
